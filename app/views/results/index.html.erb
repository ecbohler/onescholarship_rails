<p id="notice"><%= notice %></p>

<div class="container-fluid bg-blue jumbotron">
  <h1>My Scholarship Results</h1>
</div>

<div class="container-fluid">

  <% @scholarship.each do |match| %>
  <div class="row">
    <div class="col-md-8">
      <%= link_to "#{match.name}", student_scholarship_path(@student, @scholarship) %>
      <br>
      <br>
    </div>

    <div class="checkbox col-md-4">
      <label><input type="checkbox" value=""></label>
    </div>

  </div>
  <% end %>

<div class="row">
  <div class="col-md-8">
  <button class="btn btn-default">
    <%= link_to 'View My Profile', student_path(@student) %></button>
  <button class="btn btn-default">
    <%= link_to 'Edit My Profile', edit_student_path(@student) %></button>
  <button class="btn btn-default">
    <%= link_to 'All Scholarships', student_scholarships_path(@student) %></button>
  </div>

  <div class="col-md-4">
    <button class="btn btn-default">
      Apply
      </div>
    </button>
  </div>

</div>
